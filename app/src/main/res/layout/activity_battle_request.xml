<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userID"
        android:textSize="17sp"
        android:textColor="@color/grey_dark2"
        android:gravity="start"
        android:fontFamily="@font/pretendard_medium"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_profile3"
        android:contentDescription="@string/user_profile_image"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userName"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendard_extrabold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battleApply_monthRecord"
            android:textColor="@color/grey_dark"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:textColor="@color/grey_dark"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_time"
            android:textColor="@color/grey_dark"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/battleRequest_line"
        android:textColor="@color/grey_dark2"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:paddingVertical="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="40dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button"
            android:backgroundTint="@color/blue0"
            android:text="@string/battleRequest_allow"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_extrabold"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="10dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button"
            android:backgroundTint="@color/grey_dark2"
            android:text="@string/battleRequest_deny"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_extrabold"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>


</LinearLayout>