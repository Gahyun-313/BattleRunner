<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:backgroundTint="@color/white">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="@color/blue0"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/pretendard_extrabold"
            android:layout_weight="0"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/temp_btn"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@color/grey_dark2"
            android:text="@string/login_temp"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@color/blue0"
            android:text="@string/login_login"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0"/>

        <ImageButton
            android:id="@+id/kakao_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/icon"
            android:src="@drawable/login_kakao"
            android:layout_weight="0"
            android:padding="0dp">
        </ImageButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0"/>

        <ImageButton
            android:id="@+id/google_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"

            android:contentDescription="@string/icon"
            android:src="@drawable/login_google"
            android:layout_weight="0"
            android:padding="0dp">
        </ImageButton>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>

</LinearLayout>

